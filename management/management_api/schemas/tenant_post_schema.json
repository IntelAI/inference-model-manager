{
  "type": "object",
  "title": "Tenant POST Schema",
  "required": [
    "name",
    "cert",
    "scope",
    "quota"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "Tenant name",
      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
      "minLength": 3,
      "maxLength": 63
    },
    "cert": {
      "type": "string",
      "title": "Certificate"
    },
    "scope": {
      "type": "string",
      "title": "Keystone scope name"
    },
    "quota": {
      "type": "object",
      "title": "Resource quota",
      "properties": {
        "maxEndpoints": {
          "type": "integer",
          "optional": true,
          "title": "maxEndpoints",
          "minimum": 1
        },
        "requests.cpu": {
          "type": "string",
          "optional": true,
          "title": "requests.cpu",
          "pattern": "^([+]?[0-9.]+)([eEinumkKMGTP]*[+]?[0-9]*)$"
        },
        "limits.cpu": {
          "type": "string",
          "optional": true,
          "title": "limits.cpu",
          "pattern": "^([+]?[0-9.]+)([eEinumkKMGTP]*[+]?[0-9]*)$"
        },
        "requests.memory": {
          "type": "string",
          "optional": true,
          "title": "requests.memory",
          "pattern": "^([+]?[0-9.]+)([eEinumkKMGTP]*[+]?[0-9]*)$"
        },
        "limits.memory": {
          "type": "string",
          "optional": true,
          "title": "limits.memory",
          "pattern": "^([+]?[0-9.]+)([eEinumkKMGTP]*[+]?[0-9]*)$"
        }
      }
    }
  }
}
